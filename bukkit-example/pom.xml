<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.example</groupId>
    <artifactId>bukkit-test</artifactId>
    <version>1.0-SNAPSHOT</version>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
    </properties>

    <dependencies>
        <!-- base platform -->
        <dependency>
            <groupId>eu.okaeri</groupId>
            <artifactId>okaeri-platform-bukkit</artifactId>
            <version>0.3.6</version>
            <scope>compile</scope>
        </dependency>

        <!-- additional redis backend -->
        <dependency>
            <groupId>eu.okaeri</groupId>
            <artifactId>okaeri-platform-persistence-redis</artifactId>
            <version>0.3.6</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>eu.okaeri</groupId>
            <artifactId>okaeri-configs-json-simple</artifactId>
            <version>2.7.9</version>
            <scope>compile</scope>
        </dependency>

        <!-- spigot-api/paper-api -->
        <dependency>
            <groupId>org.spigotmc</groupId>
            <artifactId>spigot-api</artifactId>
            <version>1.8.8-R0.1-SNAPSHOT</version>
            <scope>provided</scope>
        </dependency>

        <!-- lombok for cleaner examples -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.18.16</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>okaeriplatformtest-bukkit-${project.version}</finalName>
        <defaultGoal>clean package</defaultGoal>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-shade-plugin</artifactId>
                <version>2.4.3</version>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>shade</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <minimizeJar>false</minimizeJar>
                    <createDependencyReducedPom>false</createDependencyReducedPom>
                    <relocations>
                        <!-- platform -->
                        <relocation>
                            <pattern>eu.okaeri.</pattern>
                            <shadedPattern>org.example.okaeriplatformtest.platform.</shadedPattern>
                        </relocation>
                        <!-- redis dependencies -->
                        <relocation>
                            <pattern>io.lettuce.core.</pattern>
                            <shadedPattern>org.example.okaeriplatformtest.libs.io.lettuce.core.</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>io.netty.</pattern>
                            <shadedPattern>org.example.okaeriplatformtest.libs.io.netty.</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>reactor.</pattern>
                            <shadedPattern>org.example.okaeriplatformtest.libs.reactor.</shadedPattern>
                        </relocation>
                        <relocation>
                            <pattern>org.reactivestreams.</pattern>
                            <shadedPattern>org.example.okaeriplatformtest.libs.org.reactivestreams.</shadedPattern>
                        </relocation>
                        <!-- okaeri-configs json-simple dependency used for redis -->
                        <relocation>
                            <pattern>org.json.simple.</pattern>
                            <shadedPattern>org.example.okaeriplatformtest.libs.org.json.simple.</shadedPattern>
                        </relocation>
                    </relocations>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <repositories>
        <repository>
            <id>okaeri-repo</id>
            <url>https://storehouse.okaeri.eu/repository/maven-public/</url>
        </repository>
        <repository>
            <id>spigot-repo</id>
            <url>https://hub.spigotmc.org/nexus/content/repositories/snapshots/</url>
        </repository>
    </repositories>

</project>